<wxs module="formattor">
  module.exports = {
    format: function (ms) {
      var date = getDate(ms/10000);
      var month=date.getMonth() + 1;
      var day=date.getDate();
      return date.getFullYear() + "-" + (month>=10?month:'0'+month)+ "-" +  (day>=10?day:'0'+day);
    }
  }
</wxs>
