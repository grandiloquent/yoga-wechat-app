  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 16rpx 16rpx 0 0;
  margin: 0 20rpx 0;
  background-repeat: no-repeat;
}

.market-title {
  font-size: 28rpx;
  color: #777060;
}