/* pages/settings/index.wxss */

.user-container {
    padding: 20rpx;
}

.user-section {
    width: auto;
    background: #fff;
    box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, .08);
    border-radius: 16rpx;
    padding: 0 20rpx;
}

.user-row {
    height: 120rpx;
    line-height: 120rpx;
    font-size: 28rpx;
    border-top: 1px solid #ededed;
    position: relative;
}

.user-title {
    color: #5a5a5a;
}

.user-value {
    width: 70%;
    text-align: right;
    color: #888;
    position: absolute;
    top: 0;
    right: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.section-gap {
    margin-top: 20rpx;
}

.active-color {
    color: #000;
}

.user-set {
    width: 35rpx;
    height: 35rpx;
    margin-left: 10rpx;
    vertical-align: middle;
}

.sign-out {
    background: #ffbf00;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    margin-top: 120rpx;
    font-weight: 700;
}

.alert {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .6);
    z-index: 200;
    position: fixed;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.alert-body {
    width: 80%;
    border-radius: 32rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.alert-content {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    flex-grow: 1;
}

.alert-title {
    font-size: 48rpx;
    font-weight: normal;
    padding: 20rpx 0 20rpx;
}

.alert-tip {
    color: #acacac;
    font-size: 24rpx;
    margin-bottom: 40rpx;
}

input {
    float: left;
    height: 32rpx;
    line-height: 32rpx;
    margin-bottom: 20rpx;
}

.confirm {
    background: #749b15;
    border-radius: 0 0 32rpx 0;
    color: #fff;
    width: 50%;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 32rpx;
}

.close {
    color: #888;
    width: 50%;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 32rpx;
    border-radius: 0 0 0 32rpx;
}