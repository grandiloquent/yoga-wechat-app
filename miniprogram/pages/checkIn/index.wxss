/*预约餐厅   */

.thumbnail {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1rpx solid #ccc;
    margin-bottom: 48rpx;
}

.right {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.course {
    display: flex;
    background: #fff;
    border-radius: 24rpx;
    padding: 24rpx;
    color: #888;
    font-size: 26rpx;
    margin-bottom: 20rpx;
}

.left {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}


.course-name {
    font-size: 36rpx;
    padding: 12rpx 0;
    color: #333;
}

.daily-schedule {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    font-size: 24rpx;
    padding: 24rpx;
    background: #fff;
}

.daily-schedule-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 12rpx 0;
}

.daily-schedule-day {
    font-size: 36rpx;
    padding: 8rpx 0;
}

.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .7);
    z-index: 2002;
}

.dialog {
    position: fixed;
    max-height: 100%;
    transform: translate(-50%, -50%);
    top: 45%;
    left: 50%;
    width: 640rpx;
    overflow: hidden;
    font-size: 32rpx;
    background: #fff;
    border-radius: 32rpx;
    backface-visibility: hidden;
    transition: .3s;
    transition-property: transform, opacity;
    z-index: 2002;
}

.dialog__header {
    padding-top: 52rpx;
    font-weight: 500;
    line-height: 48rpx;
    text-align: center;
}

.dialog__message {
    flex: 1;
    max-height: 60vh;
    padding: 26px 48rpx;
    overflow-y: auto;
    font-size: 28rpx;
    line-height: 40rpx;
    white-space: pre-wrap;
    text-align: center;
    word-wrap: break-word;
    padding-top: 16rpx;
    color: #646566;
}

.dialog__footer {
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
}

.dialog__close {
    position: relative;
    display: inline-block;
    box-sizing: border-box;
    padding: 0;
    font-size: 32rpx;
    line-height: 1.2;
    text-align: center;
    border-radius: 4rpx;
    cursor: pointer;
    transition: opacity .2s;
    -webkit-appearance: none;
    color: #323233;
    background: #fff;
    width: 100%;
    flex: 1;
    height: 96rpx;
    margin: 0;
    border: 0;
}

.dialog__button:before {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: #000;
    border: inherit;
    border-color: #000;
    border-radius: inherit;
    transform: translate(-50%, -50%);
    opacity: 0;
    content: " "
}

.button__content {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.button__content:before {
    content: " "
}

.dialog__confirm {
    font: inherit;
    position: relative;
    display: inline-block;
    box-sizing: border-box;
    padding: 0;
    font-size: 32rpx;
    line-height: 1.2;
    text-align: center;
    border-radius: 4rpx;
    cursor: pointer;
    transition: opacity .2s;
    -webkit-appearance: none;
    background: #fff;
    width: 100%;
    flex: 1;
    height: 96rpx;
    margin: 0;
    border: 0;
    /* color: #ee0a24; */
}


.dialog__border:after {
    position: absolute;
    box-sizing: border-box;
    content: " ";
    pointer-events: none;
    top: -50%;
    right: -50%;
    bottom: -50%;
    left: -50%;
    border: 0 solid rgb(235, 237, 240);
    transform: scale(.5);

}

.dialog__border--left:after {
    border-left-width: 2rpx;
}

.dialog__border--top:after {
    border-top-width: 2rpx;
}

.full-screen-centered-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.book-message {
    margin: 200rpx 0 40rpx;
}

.book-button {
    background: #749b15;
    font-size: 36rpx;
    border-radius: 999rpx;
    color: #fff;

    height: 112rpx;
    line-height: 112rpx;
    width: 50vw;
    border: 2rpx solid #749b15;
}